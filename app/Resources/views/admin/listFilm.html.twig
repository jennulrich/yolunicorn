{% extends 'layout.html.twig' %}

{% block content %}
    <style>
        i.icon {
            font-family: 'Glyphicons Halflings';
        }
    </style>
    <nav class="navbar-fixed-top">
        <span style="color: white; font-weight: lighter;">Bonjour {{ app.user.pseudo }}</span>
        <a href="{{ path('logout') }}">DÃ©connexion</a>
    </nav>
    <main class="container-fluid">
        <div class="sidenav" style="width: 20%; background-color: #2c2f43; display: inline-block;
                                    vertical-align: top; height: 100vh; position: fixed; color: white; top: 40px; left: 0">
            <p>blablabla</p>
            <p>blablabla</p>
            <p>blablabla</p>
            <p>blablabla</p>
            <p>blablabla</p>
        </div>
        <div class="listfilm" style="width: 75%; display: inline-block; margin-left: 40px; position: relative; left: 20%;">
            <div class="row text-left">
                <h2>Liste des films</h2>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th scope="col" style="width: 16%">Titre</th>
                        <th scope="col" style="width: 8%">Sortie</th>
                        <th scope="col" style="width: 16%">Acteurs</th>
                        <th scope="col" style="width: 30%">Description</th>
                        <th scope="col" style="width: 6%"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for film in films %}
                        <tr>
                            <td>{{ film.titre }}</td>
                            <td>{{ film.annee|date("d/m/Y") }}</td>
                            <td>{{ film.acteur }}</td>
                            <td>{{ film.description|truncate(200, true, '...') }}</td>
                            <td><a href="{{ path('film_edit', {"id":film.id}) }}"><i class="glyphicon glyphicon-edit"></i></a>
                                <a href="{{ path('film_delete', {"id":film.id}) }}">Supprimer</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
{% endblock %}
