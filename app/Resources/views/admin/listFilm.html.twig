{% extends 'admin/layout.html.twig' %}

{% block content %}
        <div class="listfilm">
            <div class="row text-left">
                <h2 class="col-md-6"><span class="icon-film"></span>Liste des films</h2>
                <div class="col-md-6" style="text-align: right">
                    <a href="{{ path('film_add') }}" class="ajout-film"><span class="icon-plus"></span>Ajouter un film</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover" style="background-color: white">
                    <thead style="background-color: #2c2f43; color: #b5b4c2">
                    <tr>
                        <th scope="col">Titre</th>
                        <th scope="col">Sortie</th>
                        <th scope="col">Acteurs</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for film in films %}
                        <tr>
                            <td>{{ film.titre }}</td>
                            <td>{{ film.annee|date("d/m/Y") }}</td>
                            <td>{{ film.acteur }}</td>
                            <td>{{ film.description|truncate(200, true, '...') }}</td>
                            <td class="edit"><a href="{{ path('film_edit', {"id":film.id}) }}" title="Editer"><span class="icon-edit"></span></a>
                                <a href="{{ path('film_delete', {"id":film.id}) }}" title="Supprimer"><span class="icon-trash"></span></a>
                                <a href="{{ path('film_view', {"id":film.id}) }}" title="DÃ©tail"><span class="icon-view"></span></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
{% endblock %}
